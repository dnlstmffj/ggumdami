

<section class="content-header">
  <h1>
    홈
    <small>구름중학교 꿈담이</small>
  </h1>
  <ol class="breadcrumb">
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> 홈</a></li>


  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
      <div class="box-header">
        <h3 class="box-title">프로그램 관리</h3>
        <button type="button" class="btn btn-default pull-right" onClick="showCreateProgramModal()">프로그램 생성</button>
      </div>
      <!-- /.box-header -->
     <div class="box-body">
        <table id="example2" class="table table-bordered table-hover" >
          <thead>
          <tr>
            <th>프로그램명</th>
            <th>교사/강사</th>
            <th>수업 장소</th>
            <th>그룹</th>
            <th>작업</th>
          </tr>
          </thead>
          <tbody>
          <%for(i=0; i<program.length; i++) {%>
            <tr>
              <td><%=program[i].name%></td>
              <td><%=teacher[program[i].teacher].name%></td>
              <td><%=program[i].place%></td>
              <td><%=indexGroup[program[i].group].name%></td>
              <td><button type="button" class="btn btn-info btn-sm">수정</button> <button type="button" class="btn btn-danger btn-sm">삭제</button></td>
            </tr>
          <%}%>
          </tbody>

       </table>
    </div>
  </div>
  <div class="box">
      <div class="box-header">
        <h3 class="box-title">프로그램 그룹 생성</h3>
        <button type="button" class="btn btn-default pull-right" onClick="$('#addGroupModal').modal()">그룹 생성</button>
      </div>
      <!-- /.box-header -->
     <div class="box-body">
        <table id="example2" class="table table-bordered table-hover" >
          <thead>
          <tr>
            <th>그룹명</th>
            <th>작업</th>
          </tr>
          </thead>
          <tbody>
          <%for(i=0; i<group.length; i++) {%>
            <tr>
              <td><%=group[i].name%></td>
              <td><button type="button" class="btn btn-info btn-sm" onClick="showUpdateGroup(<%=group[i].id%>, '<%=group[i].name%>')" >수정</button> <button type="button" class="btn btn-danger btn-sm" onClick="deleteGroup(<%=group[i].id%>)">삭제</button></td>
            </tr>
          <%}%>
          </tbody>
       </table>
    </div>
  </div>
</section>

<div class="modal fade" id="createProgramModal" tabindex="-1" role="dialog" aria-labelledby="createProgramModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="createProgramModalLabel">프로그램 </h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>프로그램명</label>
          <input type="text" class="form-control" id="createProgramName" placeholder="프로그램명을 입력하세요">
        </div>
        <div class="form-group">
          <label>지도교사</label>
          <select type="text" class="form-control" id="createProgramTeacher" placeholder="지도교사을 입력하세요">
            <%for(i=0; i<unindexteacher.length; i++) {%>
              <option value="<%=unindexteacher[i].id%>"><%=unindexteacher[i].name%></option>
            <%}%>
          </select>
        </div>
        <div class="form-group">
          <label>수업장소</label>
          <input type="text" class="form-control" id="createProgramPlace" placeholder="수업장소를 입력하세요">
        </div>
        <div class="form-group">
          <label>프로그램 그룹</label>
          <select type="text" class="form-control" id="createProgramGroup" placeholder="프로그램 그룹을 선택하세요">
            <%for(i=0; i<group.length; i++) {%>
              <option value="<%=group[i].id%>"><%=group[i].name%></option>
            <%}%>
          </select>
        </div>
      </div>
      <div class="modal-footer">s
        <button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
        <button type="button" class="btn btn-primary" onClick="createProgram()">저장</button>
      </div>
    </div>
  </div>
</div>
  
