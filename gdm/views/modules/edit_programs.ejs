

<section class="content-header">
  <h1>
    <%=course[0].name%>
    <small> 프로그램 관리</small>
  </h1>
  <ol class="breadcrumb">
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> 홈</a></li>


  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
      <div class="box-header">
        <h3 class="box-title">프로그램 관리</h3>
        <button type="button" class="btn btn-default pull-right" onClick="showCreateProgramModal('create')">프로그램 생성</button>
      </div>
      <!-- /.box-header -->
     <div class="box-body">
        <table id="example2" class="table table-bordered table-hover" >
          <thead>
          <tr>
            <th>프로그램명</th>
            <th>교사/강사</th>
            <th>수업 장소</th>
            <th>그룹</th>
            <th>작업</th>
          </tr>
          </thead>
          <tbody>
          <%for(i=0; i<program.length; i++) {%>
            <tr>
              <td><%=program[i].name%></td>
              <td><%=teacher[program[i].teacher].name%></td>
              <td><%=program[i].place%></td>
              <td><%=indexGroup[program[i].group].name%></td>
              <td><button type="button" class="btn btn-info btn-sm" onClick="showCreateProgramModal('update', '<%=program[i].id%>', '<%=program[i].name%>', '<%=program[i].place%>', '<%=program[i].teacher%>', '<%=program[i].group%>')" >수정</button> <button type="button" class="btn btn-danger btn-sm" onClick="deleteProgram(<%=program[i].id%>)">삭제</button></td>
            </tr>
          <%}%>
          </tbody>

       </table>
    </div>
  </div>
  <div class="box">
      <div class="box-header">
        <h3 class="box-title">프로그램 그룹 생성</h3>
        <button type="button" class="btn btn-default pull-right" onClick="$('#addGroupModal').modal()">그룹 생성</button>
      </div>
      <!-- /.box-header -->
     <div class="box-body">
        <table id="example2" class="table table-bordered table-hover" >
          <thead>
          <tr>
            <th>그룹명</th>
            <th>작업</th>
          </tr>
          </thead>
          <tbody>
          <%for(i=0; i<group.length; i++) {%>
            <tr>
              <td><%=group[i].name%></td>
              <td><button type="button" class="btn btn-info btn-sm" onClick="showUpdateGroup(<%=group[i].id%>, '<%=group[i].name%>')" >수정</button> <button type="button" class="btn btn-danger btn-sm" onClick="deleteGroup(<%=group[i].id%>)">삭제</button></td>
            </tr>
          <%}%>
          </tbody>
       </table>
    </div>
  </div>
</section>


  
