

<section class="content-header">
  <h1>
    학생 관리
    <small> 학교 재학생을 등록하고 관리합니다.</small>
  </h1>
  <ol class="breadcrumb">
    <li class="active"><a href="#"><i class="fa fa-dashboard"></i> 홈</a></li>


  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
      <div class="box-header">
        <h3 class="box-title">재학생 관리</h3>
        <button type="button" class="btn btn-default pull-right" onClick="showCreateStudentModal('create')">학생 추가</button>
      </div>
      <!-- /.box-header -->
     <div class="box-body">
        <table id="tableStudent" class="table table-bordered table-hover" >
          <thead>
          <tr>
            <th>학번</th>
            <th>이름</th>
            <th>그룹</th>
            <th>휴대전화</th>
            <th>생년월일</th>
            <th>작업</th>
          </tr>
          </thead>
          <tbody>
          <%for(i=0; i<student.length; i++) {%>
            <tr>
              <td><%=student[i].id%></td>
              <td><%=student[i].name%></td>
              <td><%=groupindexed[student[i].group].name%></td>
              <td><%=student[i].phone%></td>
              <td><%=student[i].birthdate%></td>
              <td><button type="button" class="btn btn-info btn-sm" onClick="showCreateStudentModal('update', <%=student[i].id%>, '<%=student[i].name%>', '<%=student[i].phone%>', '<%=student[i].birthdate%>', <%=student[i].group%>)" >수정</button> <button type="button" class="btn btn-danger btn-sm" onClick="deleteStudent(<%=student[i].id%>)">삭제</button></td>
            </tr>
          <%}%>
          </tbody>
          <tfoot>
          <tr>
            <th>학번</th>
            <th>이름</th>
            <th>그룹</th>
            <th>휴대전화</th>
            <th>생년월일</th>
            <th>작업</th>
          </tr>
          </tfoot>

       </table>
    </div>
  </div>
  <div class="box">
      <div class="box-header">
        <h3 class="box-title">학생 그룹 생성</h3>
        <button type="button" class="btn btn-default pull-right" onClick="showCreateStuGroupModal('create')">그룹 생성</button>
      </div>
      <!-- /.box-header -->
     <div class="box-body">
        <table id="example2" class="table table-bordered table-hover" >
          <thead>
          <tr>
            <th>그룹명</th>
            <th>작업</th>
          </tr>
          </thead>
          <tbody>
          <%for(i=0; i<group.length; i++) {%>
            <tr>
              <td><%=group[i].name%></td>
              <td><button type="button" class="btn btn-info btn-sm" onClick="showCreateStuGroupModal('update', <%=group[i].id%>, '<%=group[i].name%>')" >수정</button> <button type="button" class="btn btn-danger btn-sm" onClick="deleteStuGroup(<%=group[i].id%>)">삭제</button></td>
            </tr>
          <%}%>
          </tbody>
       </table>
    </div>
  </div>
</section>


  
